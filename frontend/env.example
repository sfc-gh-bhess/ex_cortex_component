# Backend API URL
# The base URL for the backend API
# Default is http://localhost:8000 if not specified
VITE_API_BASE_URL=http://localhost:8000

# Response Display Configuration
# Control which types of agent responses are shown in the chat interface
# Set to 'true' or 'false' (case-insensitive)
# Defaults: text=true, charts=true, tables=true, thinking=false, tool_use=false, status=false

# Show text responses from the agent (default: true)
VITE_SHOW_TEXT=true

# Show chart visualizations (default: true)
VITE_SHOW_CHARTS=true

# Show table data (default: true)
VITE_SHOW_TABLES=true

# Show agent thinking processes (default: false)
VITE_SHOW_THINKING=false

# Show tool use operations (default: false)
VITE_SHOW_TOOL_USE=false

# Show status messages (default: false)
VITE_SHOW_STATUS=false

